<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_gravity="center"
    android:layout_width="fill_parent"
    android:layout_height="190dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    style="@style/BoxWhite"
    >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:id="@+id/TitleLable"
        android:text="Title"
        android:focusable="false"
        android:clickable="false"
        android:paddingLeft="10dp"
        android:background="@drawable/button_white_round_corners"
        style="@style/TextViewDarkGreyTitle"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorPrimaryDark"
        android:layout_below="@+id/TitleLable"
        android:id="@+id/horizontal_line">
    </View>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="65dp"
        android:id="@+id/MessageLabel"
        android:text="This is the message, This is the message This is the message...."
        android:focusable="false"
        android:clickable="false"
        android:padding="10dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:background="@color/background_white"
        style="@style/TextViewGreyMedium"
        android:layout_below="@+id/horizontal_line"
        />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@android:color/transparent"
        android:layout_below="@+id/MessageLabel"
        android:layout_alignParentStart="true">

        <Button
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:id="@+id/CancelButton"
            android:text="Cancel"
            android:visibility="gone"
            style="@style/WhiteButtonWithBorder"
            />

        <Button
            android:layout_width="125dp"
            android:layout_height="35dp"
            android:id="@+id/OKButton"
            android:text="OK"
            android:layout_marginLeft="20dp"
            android:visibility="visible"
            style="@style/WhiteButtonWithBorder"
            />

    </LinearLayout>


</RelativeLayout>