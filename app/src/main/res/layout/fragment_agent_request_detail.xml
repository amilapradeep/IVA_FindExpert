<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/fragment_padding_top"
    android:background="@drawable/main_view_background"
    tools:context="com.iva.findexpert.UI.Agent.Fragments.AgentRequestDetailFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="vertical"
            android:id="@+id/header"
            android:paddingTop="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingLeft="10dp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@mipmap/ic_phone_white"
                    android:background="@drawable/bg_circle_white_thick"
                    android:scaleType="center"
                    android:layout_marginRight="20dp"
                    android:id="@+id/phoneButton"
                    android:layout_alignParentEnd="true"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:text=""
                    android:id="@+id/buyerName"
                    style="@style/TextViewWhiteLarge"/>

            </RelativeLayout>

        </LinearLayout>

       <!-- <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/header"
            android:layout_height="wrap_content">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:paddingBottom="5dp"
                android:background="@color/background_white"/>
        </LinearLayout>-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="55dp"
            android:layout_marginTop="45dp"
            android:id="@+id/pageScroll"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/container"
                android:padding="5dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/edittext_light_border">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="125dp"
                                android:layout_height="30dp"
                                android:text=""
                                android:id="@+id/vehicleNo"
                                style="@style/TextViewDarkGreyTitle"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Exp: "
                                style="@style/TextViewDarkGreyMedium"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text=""
                                android:id="@+id/expiryDate"
                                style="@style/TextViewDarkGreyMedium"/>


                        </LinearLayout>


                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/edittext_light_border">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="30dp"
                                android:text="Request Code"
                                style="@style/TextViewDarkGreyMedium"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="120dp"
                            android:id="@+id/code"
                            android:text=""
                            style="@style/TextViewGreyMedium"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/edittext_light_border">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="30dp"
                                android:text="Policy Type"
                                style="@style/TextViewDarkGreyMedium"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="120dp"
                            android:id="@+id/claimType"
                            android:text=""
                            style="@style/TextViewGreyMedium"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/edittext_light_border">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="30dp"
                                android:text="Category"
                                style="@style/TextViewDarkGreyMedium"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="120dp"
                            android:id="@+id/category"
                            android:text=""
                            style="@style/TextViewGreyMedium"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/edittext_light_border">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="30dp"
                                android:text="Usage"
                                style="@style/TextViewDarkGreyMedium"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="120dp"
                            android:id="@+id/usage"
                            android:text=""
                            style="@style/TextViewGreyMedium"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/edittext_light_border">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="30dp"
                                android:text="Value"
                                style="@style/TextViewDarkGreyMedium"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="120dp"
                            android:id="@+id/value"
                            android:text=""
                            style="@style/TextViewGreyMedium"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/edittext_light_border">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="30dp"
                                android:text="Year"
                                style="@style/TextViewDarkGreyMedium"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="120dp"
                            android:id="@+id/year"
                            android:text=""
                            style="@style/TextViewGreyMedium"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/edittext_light_border">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="30dp"
                                android:text="Financed"
                                style="@style/TextViewDarkGreyMedium"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="120dp"
                            android:id="@+id/financed"
                            android:text=""
                            style="@style/TextViewGreyMedium"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/edittext_light_border">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="30dp"
                                android:text="Nearest City"
                                style="@style/TextViewDarkGreyMedium"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="120dp"
                            android:id="@+id/city"
                            android:text=""
                            style="@style/TextViewGreyMedium"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:background="@drawable/edittext_light_border">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="110dp"
                                android:layout_height="30dp"
                                android:text="Date"
                                style="@style/TextViewDarkGreyMedium"/>

                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="120dp"
                            android:id="@+id/occuredTime"
                            android:text=""
                            style="@style/TextViewGreyMedium"
                            />

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="10dp"
                    android:paddingLeft="20dp"
                    android:id="@+id/quotationContainer"
                    android:visibility="gone"
                    android:background="@drawable/edittext_light_border">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="20dp"
                        android:paddingBottom="5dp"
                        android:id="@+id/quoteHeader"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="30dp"
                                android:text="Your Quotation"
                                style="@style/TextViewDarkGreyTitle"/>

                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentEnd="true"
                                android:layout_marginEnd="20dp"
                                android:id="@+id/overflowButtonImage"
                                android:src="@mipmap/ic_expand_more_black"/>

                        </RelativeLayout>


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone"
                            android:id="@+id/quoteDetails">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="0dp"
                                android:paddingTop="10dp"
                                android:paddingBottom="5dp"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:text="Premium"
                                    style="@style/TextViewDarkGreyMedium"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:id="@+id/premium"
                                    style="@style/TextViewDarkGreyMedium"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="0dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:text="Covering up to"
                                    style="@style/TextViewDarkGreyMedium"/>
                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text=""
                                    android:id="@+id/coverage"
                                    style="@style/TextViewDarkGreyMedium"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="0dp"
                                android:paddingTop="5dp"
                                android:paddingBottom="5dp"
                                android:orientation="vertical"
                                android:gravity="center_vertical">

                                <TextView
                                    android:layout_width="120dp"
                                    android:layout_height="wrap_content"
                                    android:text="Description"
                                    style="@style/TextViewDarkGreyMedium"/>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="5dp"
                                    android:paddingBottom="5dp"
                                    android:background="@drawable/edittext_light_border">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:paddingTop="5dp"
                                        android:id="@+id/quoteDescription"
                                        style="@style/TextViewDarkGreyMedium"/>

                                </LinearLayout>

                            </LinearLayout>

                        </LinearLayout>



                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_alignParentBottom="true"
                android:padding="10dp"
                android:gravity="center">

                <Button
                    android:layout_width="125dp"
                    android:layout_height="40dp"
                    android:text="Message"
                    android:textColor="#444"
                    android:id="@+id/messageButton"
                    android:visibility="gone"
                    style="@style/WhiteButton"/>

                <View
                    android:layout_width="20dp"
                    android:layout_height="match_parent"/>

                <Button
                    android:layout_width="125dp"
                    android:layout_height="40dp"
                    android:text="Quotation "
                    android:textColor="#444"
                    android:id="@+id/quoteButton"
                    android:visibility="gone"
                    style="@style/WhiteButton"/>


            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>


</FrameLayout>
