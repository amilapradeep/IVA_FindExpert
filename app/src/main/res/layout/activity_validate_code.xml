<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_validate_code"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_view_background"
    tools:context="com.iva.findexpert.UI.Buyer.ValidateCodeActivity">

    <include
        android:id="@+id/tool_bar"
        android:visibility="gone"
        layout="@layout/tool_bar">
    </include>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_below="@+id/tool_bar"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="110dp"
                android:gravity="center_horizontal"
                android:paddingTop="20dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="160dp"
                    android:layout_height="90dp"
                    android:layout_marginBottom="0dp"
                    android:src="@mipmap/ic_logo_name"/>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your verification code"
                android:paddingLeft="10dp"
                android:gravity="center"
                style="@style/TextViewWhiteMedium"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="10dp"
                android:visibility="gone"
                android:text="Verification code was sent to the provided phone number by SMS. Please enter the code below. "
                style="@style/TextViewWhiteSmall"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="40dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/container">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="35dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:background="@drawable/edittext_border_no_bg">

                            <TextView
                                android:layout_width="60dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical"
                                android:paddingBottom="2dp"
                                android:text="Mobile"
                                style="@style/TextViewGreyLarge"/>

                            <TextView
                                android:layout_width="20dp"
                                android:layout_height="match_parent"
                                android:gravity="center_vertical|right"
                                android:paddingBottom="2dp"
                                android:text="+"
                                style="@style/TextViewGreyLarge"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="30dp"
                                android:id="@+id/phoneTextBox"
                                android:text=""
                                android:paddingBottom="2dp"
                                style="@style/TextViewGreyLarge"
                                />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:gravity="center">

                        <LinearLayout
                            android:layout_width="250dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:orientation="horizontal"
                            >

                            <EditText
                                android:layout_width="45dp"
                                android:layout_height="35dp"
                                android:id="@+id/charOne"
                                android:gravity="center"
                                android:maxLength="1"
                                android:maxLines="1"
                                android:textSize="30sp"
                                android:inputType="number"
                                android:paddingLeft="0dp"
                                style="@style/EditTextGrey"
                                />
                            <EditText
                                android:layout_width="45dp"
                                android:layout_height="35dp"
                                android:id="@+id/charTwo"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:maxLength="1"
                                android:maxLines="1"
                                android:textSize="30sp"
                                android:inputType="number"
                                android:paddingLeft="0dp"
                                style="@style/EditTextGrey"
                                />
                            <EditText
                                android:layout_width="45dp"
                                android:layout_height="35dp"
                                android:id="@+id/charThree"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:maxLength="1"
                                android:maxLines="1"
                                android:textSize="30sp"
                                android:inputType="number"
                                android:paddingLeft="0dp"
                                style="@style/EditTextGrey"
                                />
                            <EditText
                                android:layout_width="45dp"
                                android:layout_height="35dp"
                                android:id="@+id/charFour"
                                android:layout_marginLeft="5dp"
                                android:gravity="center"
                                android:maxLength="1"
                                android:maxLines="1"
                                android:textSize="30sp"
                                android:inputType="number"
                                android:paddingLeft="0dp"
                                style="@style/EditTextGrey"
                                />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:gravity="center">

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:text="Submit"
                        android:textColor="@color/colorBackgroundEnd"
                        android:id="@+id/submitButton"
                        style="@style/WhiteButton"/>
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="30dp"
                    android:visibility="gone"
                    android:background="@color/background_white"></View>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="75dp"
                    android:orientation="vertical"
                    android:layout_marginTop="20dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Go back and Request new code"
                        style="@style/TextViewWhiteMedium"/>

                    <Button
                        android:layout_width="150dp"
                        android:layout_height="35dp"
                        android:layout_marginTop="10dp"
                        android:text="Get Code"
                        android:textColor="@color/colorBackgroundEnd"
                        android:id="@+id/newCodeButton"
                        style="@style/WhiteButton"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="5dp"
                    android:paddingTop="20dp"
                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Having trouble logging in? We can help!"
                        style="@style/TextViewWhiteMedium"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:text="Call us on +94 112712950"
                        android:id="@+id/contactPhone"
                        style="@style/TextViewWhiteMedium"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
